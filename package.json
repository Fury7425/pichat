{
  "name": "pichat",
  "private": true,
  "version": "1.0.0",
  "description": "PiChat secure messaging monorepo",
  "license": "Apache-2.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "bootstrap": "yarn install",
    "lint": "eslint . --ext .ts,.tsx",
